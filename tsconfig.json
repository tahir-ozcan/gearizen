// tsconfig.json
{
  "compilerOptions": {
    /* Hedeflenen JS sürümü ve DOM / ESNext API’leri */
    "target": "ESNext",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],

    /* Modül sistemi ve çözümleme */
    "module": "ESNext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,

    /* Çıktı üretme: Next.js kendisi derleyecek */
    "noEmit": true,
    "isolatedModules": true,
    "jsx": "preserve",

    /* Katı tip denetimi */
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "allowJs": true,

    /* Proje içi alias’lar */
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      /* PDF.js bildirimlerimizi bu .d.ts dosyasına yönlendiriyoruz */
      "pdfjs-dist/legacy/build/pdf": ["types/pdfjs-worker.d.ts"],
      "pdfjs-dist/legacy/build/pdf.worker.min.js?url": ["types/pdfjs-worker.d.ts"]
    },

    /* Yeniden derleme hızlandırma */
    "incremental": true,

    /* Özel tip köklerimiz */
    "typeRoots": ["./types", "./node_modules/@types"]
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",

    /* .d.ts’lerimizi mutlaka derlemeye dahil ediyoruz */
    "types/**/*.d.ts",
    ".next/types/**/*.ts"
  ],
  "exclude": ["node_modules"]
}