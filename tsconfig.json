{
  "compilerOptions": {
    /* Hedeflenen JS sürümü ve global/types */
    "target": "ESNext",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],

    /* Modül çözümü ve çıktı ayarları */
    "module": "Node16",
    "moduleResolution": "Node16",
    "noEmit": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "resolveJsonModule": true,

    /* Katı tip denetimi */
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "allowJs": true,
    "esModuleInterop": true,

    /* Proje içi import kısayolları */
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"]
    },

    /* Hızlı yeniden derleme */
    "incremental": true,

    /* Global tip deklarasyonlarını arayacağımız klasörler */
    "typeRoots": ["./node_modules/@types", "./types"],

    /* Next.js için önerilen plugin */
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  /* Derleme kapsamı */
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "./types/**/*.d.ts",
    ".next/types/**/*.ts"
  ],
  "exclude": ["node_modules"]
}